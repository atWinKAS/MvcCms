@model IEnumerable<MvcCms.Models.Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.IsIndex = true;
}


<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            
            @Html.Raw(string.Join("<hr/>", Model.Select(p => Html.Partial("_renderPost", p))))

            <!-- Pager -->
            <ul class="pager">
                
                @if (ViewBag.PreviousPage > 0)
                {
                    <li class="next">
                        @Html.ActionLink("Previous Page", "page", new { controller = "home", page = ViewBag.PreviousPage })
                    </li>
                }

                
                @if (ViewBag.NextPage > -1)
                {
                    <li class="next">
                        @Html.ActionLink("Next Page", "page", new { controller = "home", page = ViewBag.NextPage })
                    </li>
                }
                
            </ul>
        </div>
    </div>
</div>



